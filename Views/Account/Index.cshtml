@model OXG.CRM_System.ViewModels.AccountVM
@{
    ViewData["Title"] = "Index";
}

<h1>@Model.Email</h1>

<div class="row">
    <div class="col-lg-5">
        <div class="card border-primary mb-3">
            <div class="card-header"><a asp-action="ChangePhoto"><img src="@Model.Photo" class="figure-img rounded-circle img-fluid" alt="~/images/defaultPhoto.png"></a></div>
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="card border-primary mb-3">
            <div class="card-body">
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input asp-for="Email" readonly="" class="form-control-plaintext" id="static">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Должность</label>
                    <div class="col-sm-10">
                        <input asp-for="Position" readonly="" class="form-control-plaintext" id="static">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Номер телефона</label>
                    <div class="col-sm-10">
                        <input asp-for="Phone" readonly="" class="form-control-plaintext" id="static">
                    </div>
                </div>
                <div class="form-group row">
                    <a asp-action="ChangePassword">Сменить пароль</a>
                </div>
            </div>
        </div>
    </div>
</div>
