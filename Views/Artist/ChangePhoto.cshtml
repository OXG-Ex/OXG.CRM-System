
@{
    ViewData["Title"] = "Фото профиля";
}

<h1>Загрузите фото профиля</h1>
<form asp-action="ChangePhoto" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="custom-file">
                <input type="file" class="custom-file-input" name="uploadedFile" id="inputGroupFile02">
                <label class="custom-file-label" for="inputGroupFile02">Выберите файл</label>
            </div>
            <div class="input-group-append">
                <input type="submit" class="input-group-text" value="Отправить" id="" />
            </div>
        </div>
    </div>
</form>