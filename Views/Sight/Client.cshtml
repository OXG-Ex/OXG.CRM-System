@model OXG.CRM_System.Models.Client
@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-info">
    <div class="card-header">Клиент ID=@Model.Id</div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <div class="form-group row">
                    <label for="Name" class="col-sm-2 col-form-label">Имя</label>
                    <div class="col-sm-10">
                        <input type="text" readonly="" class="form-control-plaintext" id="Name" value="@Model.Name">
                    </div>
                </div>
                <hr />
                <div class="form-group row">
                    <label for="Phone" class="col-sm-2 col-form-label">Телефон</label>
                    <div class="col-sm-10">
                        <input type="text" readonly="" class="form-control-plaintext" id="Phone" value="@Model.Phone">
                    </div>
                </div>
                <hr />
                <div class="form-group row">
                    <label for="Email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" readonly="" class="form-control-plaintext" id="Email" value="@Model.Email">
                    </div>
                </div>
                <hr />
                @if (Model.ClientVK.Count != 0)
                {
                    <div class="form-group row">
                        <label for="Email" class="col-sm-2 col-form-label">VK</label>
                        <div class="col-sm-10">
                            <a href="@Model.ClientVK.LastOrDefault().VkAdress">@Model.ClientVK.LastOrDefault().VkName</a>
                        </div>
                    </div>
                    <hr />
                }
                <div class="form-group row">
                    <label for="Manager" class="col-sm-2 col-form-label">Менеджер</label>
                    <div class="col-sm-10">
                        <input type="text" readonly="" class="form-control-plaintext" id="Manager" value="@Model.Manager.Name">
                    </div>
                </div>
                <hr />
                <div class="form-group row">
                    <label for="Name" class="col-sm-2 col-form-label">Описание</label>
                    <div class="col-sm-10">
                        <input type="text" readonly="" class="form-control-plaintext" id="Name" value="@Model.Description">
                    </div>
                </div>
                <hr />
                <div class="form-group row">
                    <label for="Name" class="col-sm-2 col-form-label">Мероприятия</label>
                    <div class="col-sm-10">
                        @foreach (var item in Model.Events)
                        {
                            <a asp-controller="Events" asp-action="View" asp-route-id="@item.Id">@item.Name</a> <br />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>