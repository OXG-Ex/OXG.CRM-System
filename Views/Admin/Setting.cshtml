@model OXG.CRM_System.ViewModels.AdminSettingVM
@{
    ViewData["Title"] = "Setting";
}


<div class="card border-info mb-3">
    <div class="card-header">Конфигурация</div>
    <div class="card-body">
        <form asp-action="SaveEmailSetting" method="post">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th scope="row">Email</th>
                        <td> <input type="email" asp-for="EmailLogin" class="form-control" required/></td>
                        <td><span asp-validation-for="EmailLogin"></span></td>
                    </tr>
                    <tr>
                        <th scope="row">Пароль для Email</th>
                        <td> <input type="password" asp-for="EmailPassword" class="form-control" required/></td>
                        <td><span asp-validation-for="EmailPassword"></span></td>
                    </tr>
                    <tr>
                        <th scope="row">Название компании</th>
                        <td> <input type="text" asp-for="CompanyName" class="form-control" required/></td>
                        <td><span asp-validation-for="CompanyName"></span></td>
                    </tr>
                </tbody>
            </table>
            <br />
            <input type="submit" asp-action="SaveEmailSetting" class="btn btn-outline-info" value="Сохранить изменения" />
        </form>
    </div>
</div>
<div class="card border-info mb-3">
    <div class="card-header">Договор</div>
    <div class="card-body">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th scope="row">Шаблон договора</th>
                    <td><a asp-action="ContractTemplate">Template.docx</a>
                </tr>
                <tr>
                    <th scope="row">Загрузить новый шаблон</th>
                    <td>
                        <form asp-action="NewTemplate" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="uploadedFile" id="inputGroupFile02">
                                        <label class="custom-file-label" for="inputGroupFile02">Выберите файл</label>
                                    </div>
                                    <div class="input-group-append">
                                        <input type="submit" class="input-group-text" value="Отправить" id="" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>