
@{
    ViewData["Title"] = "Отклонить";
}

<h1>Отклонить</h1>

<form asp-action="Reject">
    <div class="form-group">
        <label for="Input">Причина отклонения</label>
        <input name="RejPrin" type="text" class="form-control" id="Input" placeholder="">
        <small id="emailHelp" class="form-text text-muted">Введите причину по которой заявка была отклонена</small>
        <input type="submit" class="btn btn-primary" value="Отправить"/>
        <input hidden name="id" value="@ViewBag.mId" />
    </div>
</form>