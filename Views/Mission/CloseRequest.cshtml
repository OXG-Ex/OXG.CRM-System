@model OXG.CRM_System.Models.Mission
@{
    ViewData["Title"] = "Заявка";
}

<div class="jumbotron">
    <h1 class="display-3">@Model.MissionType</h1>
    <h3 class="lead">@Html.Raw(Model.MissionText)</h3>
    <hr class="my-4">
    <div class="row">
        <div class="col-lg-6"><a asp-action="New" asp-controller="Events" class="btn btn-info btn-lg btn-block">Отложить</a></div>
        <div class="col-lg-6"><a asp-action="Reject" asp-controller="Mission" asp-route-id="@Model.Id" class="btn btn-warning btn-lg btn-block">Отклонить</a></div>
    </div>
    <br />
    <div class="row"></div>
    <a class="btn btn-success btn-lg btn-block">Создать новое мероприятие</a>
</div>
